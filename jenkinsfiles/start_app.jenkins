#!groovy
// check run project

pipeline {
    agent any
    stages {
        stage('build image') {
            steps {
                docker.build('')
            }
        }
        stage('Start flask app') {
            steps {
                sh 'python3 main.py'
            }
        }
        stage('Run tests'){
            steps {
                sh 'pytest -v'
            }
        }
    }
}